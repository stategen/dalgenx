    <operation name="getReplyCounts" remarks="获取当前回复的数量" multiplicity="many">
        <sql>
            SELECT
            b.topic_id,
            COUNT(b.reply_id) as replyCount
            FROM
            topic_reply b
            WHERE
            b.delete_flag = 0
            <isNotEmpty property="topicIds" open="and">
                b.topic_id in
                <iterate property="topicIds" conjunction="," open="(" close=")">
                    #topicIds[]#
                </iterate>
            </isNotEmpty>
            <isEmpty property="topicIds" open="and">
                1=0
            </isEmpty>
            GROUP BY b.topic_id
        </sql>
    </operation>

