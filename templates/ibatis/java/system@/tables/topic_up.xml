    <operation name="getTopicUpsGroupCountByTopicIds" resultClass="object" multiplicity="many">
        <sql>
            SELECT
            tu.object_id,
            COUNT(*) AS upCount
            FROM
            topic_up tu
            LEFT JOIN topic_reply tr ON tr.reply_id = tu.object_id
            WHERE
            tu.delete_flag=0
            and tr.delete_flag=0
            <isNotEmpty property="objectIds">
                and tu.object_id in
                <iterate property="objectIds" conjunction="," open="(" close=")">
                    #objectIds[]#
                </iterate>
            </isNotEmpty>
            <isEmpty  property="objectIds">
              and 1=0
            </isEmpty>
            <isNotEmpty property="authorId" >
                and tu.author_id =?
            </isNotEmpty>
            GROUP BY
            tu.object_id
        </sql>
    </operation>


    <operation name="getTopicUpByObjectIdAndAuthorId"  multiplicity="many" remarks="">
        <sql>
            select
            a.up_id,
            a.object_id,
            a.author_id,
            a.create_time,
            a.update_time,
            a.delete_flag
            from topic_up a
            where
            a.delete_flag = 0
            and a.object_id=?
            and a.author_id=?
        </sql>
    </operation>
