    <operation name="getUserByMobile" multiplicity="one" remarks="">
        <sql>
            select
            a.user_id,
            a.username,
            a.password,
            a.role_type,
            a.name,
            a.nickName,
            a.inter_code,
            a.mobile,
            a.age,
            a.address,
            a.avatar_img_id,
            a.email,
            a.vali_datetime,
            a.birthday_date,
            a.work_time,
            a.province_id,
            a.city_id,
            a.status,
            a.grade,
            a.sex,
            a.post_address_id,
            a.remark,
            a.create_time,
            a.update_time,
            a.delete_flag
            from user a
            where
            a.delete_flag = 0
            and a.inter_code = ?
            and a.mobile = ?
        </sql>
    </operation>

</table>
